mixin tagFormat(tag)
    tr
        td
            p=tag.personInfo
        td
            p=tag.tagInfo
        td
            img(src=tag.photo, width='300px', height='300px')
        td
            form(method="POST", action="delete")
                button(type='submit',name='id',value='#{tag._id}') DELETE

html(lang="en")
    head
        title FishTags-Test
    body
        table
            tr
                th person Info
                th tag Info
                th photo
                th delete
            each tag in tags
                +tagFormat(tag)